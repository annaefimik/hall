<UserControl x:Class="CinemaHall.Otchet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaHall"
             mc:Ignorable="d" d:DesignWidth="596" Loaded="UserControl_Loaded" Height="450">
    <StackPanel Background="#FF222222">
        <Label Margin="10" x:Name="name"  Height="37" Foreground="White" FontFamily="Microsoft YaHei UI Light" FontSize="24" HorizontalAlignment="Center"/>
        <DataGrid x:Name="dataGrid" Width="594" d:ItemsSource="{d:SampleData ItemCount=5}" Height="393" Background="#FF222222" BorderBrush="{x:Null}"/>


    </StackPanel>
</UserControl>
